---
layout: default
---

<section class="container">
    <article class="post">
        <section class="post__icon">
            <i class="{{ page.icon }}"></i>
        </section>
        <section class="post__content">
            <h1>{{ page.title }}</h1>
            <i>publicado em {{ date(post.date, 'll') }}</i>
            {{ page.content }}
        </section>
    </article>
</section>
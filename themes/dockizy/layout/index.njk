{% block mainbody %}
    <section class="container">
        <h3 class="title__page"><strong>Início</strong> | Últimas publicações</h3>
        {% for post in site.posts.sort('date', -1).toArray() %}
            {% if loop.index < 4 %}
                <a href="{{ url_for(post.path) }}" aria-label="{{ post.title }}">
                    <article class="card card--full">
                        <section class="card__info">
                            <h3 class="card__post-title">
                                {{ post.title }}
                            </h3>
                            <span class="card__post-info">
                                postado em {{ date(post.date, 'll') }} | 
                                {{ min2read(post.content) }} minutos de leitura
                            </span>
                        </section>
                    </article>
                </a>
            {% endif %}
        {% endfor %}
    </section>

    <section style="text-align: center; margin-top: 3rem;">
        <a href="/blog" class="btn">ver todos os posts</a>
    </section>
{% endblock %}
<section class="container">
    <h3 class="title__page"><strong>Início</strong> | Últimas publicações</h3>
    {% for post in site.posts.sort('date', -1).toArray() %}
        {% if loop.first %}
            <a href="{{ url_for(post.path) }}" aria-label="{{ post.title }}">
                <article class="card card--full">
                    <section class="card__thumb">
                        <i class="{{ post.icon }}"></i>
                    </section>
                    <section class="card__info">
                        <h3 class="card__post-title">{{ post.title }}</h3>
                        <span class="card__post-date">postado em {{ date(post.date, 'll') }}</span>
                    </section>
                </article>
            </a>
        {% elif loop.index < 4 %}
            <a class="card__link" href="{{ url_for(post.path) }}" aria-label="{{ post.title }}">
                <article class="card">
                    <section class="card__thumb">
                        <i class="{{ post.icon }}"></i>
                    </section>
                    <section class="card__info">
                        <h3 class="card__post-title">{{ post.title }}</h3>
                        <span class="card__post-date">postado em {{ date(post.date, 'll') }}</span>
                    </section>
                </article>
            </a>
        {% endif %}
    {% endfor %}
</section>

<section style="text-align: center; margin-top: 3rem;">
    <a href="/blog" class="btn">ver todos os posts <i class="fas fa-angle-double-right"></i></a>
</section>



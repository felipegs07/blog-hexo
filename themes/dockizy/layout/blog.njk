{% extends "default.njk" %}

{% block maincontent %}
    <section>BLOG.</section>
{% endblock %}

{% block mainbody %}
    <section class="container">
        <h3 class="title__page"><strong>Blog</strong> | Todas as publicações</h3>
        {% for post in site.posts.sort('date', -1).toArray() %}
            <a href="{{ url_for(post.path) }}" aria-label="{{ post.title }}">
                <article class="card card--full">
                    <section class="card__info">
                        <h3 class="card__post-title">
                            {{ post.title }}
                        </h3>
                        <span class="card__post-info">
                            postado em {{ date(post.date, 'll') }} | 
                            {{ min2read(post.content) }} minutos de leitura
                        </span>
                    </section>
                </article>
            </a>
        {% endfor %}
    </section>
{% endblock %}
